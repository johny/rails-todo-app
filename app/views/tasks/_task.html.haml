%li.list-group-item
  = link_to complete_task_path(task), class: 'action-complete', method: :post do
    = task.title
    %span.glyphicon.glyphicon-ok

  - unless task.gold.nil?
    %span.task-gold.label.label-default
      %i.fa.fa-plus-circle
      =task.silver
      silver

  %small.task-project
    - if task.project.nil?
      = "#inbox"
    -else
      = "##{task.project.name}"

  %span.task-xp.label.label-info
    %span.glyphicon.glyphicon-star
    = "#{task.xp_points} XP"

  = link_to edit_task_path(task), class: 'action-edit' do
    %span.glyphicon.glyphicon-edit
  = link_to task_path(task), class: 'action-delete', method: :delete do
    %span.glyphicon.glyphicon-trash